{
  "name": "fuel-price-predictor",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "setup": "npm install && npm --prefix backend install && npm --prefix frontend install",
    "dev": "npx concurrently \"npm --prefix backend run dev\" \"npm --prefix frontend run start\"",
    "build": "npm --prefix frontend run build",
    "start": "npx pm2 start ecosystem.config.js",
    "restart": "npx pm2 restart ecosystem.config.js",
    "reload": "npx pm2 reload ecosystem.config.js",
    "stop": "npx pm2 stop ecosystem.config.js",
    "pm2:list": "npx pm2 ls"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "pm2": "^5.3.0"
  }
}


